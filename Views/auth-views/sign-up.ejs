<%- include('../include/head') %> 
<link rel="stylesheet" href="/static/css/sign-up.css">
</head>
<body style="padding-left: 1rem;padding-top: 1rem;">

    <a href="/" class="btn">Back to home</a>

    <form class="form" action="/sign-up" method="POST">

        <h4>Sign-Up</h4>

        <div class="form-row">
            <label for="name" class="form-label">Name</label>
            <div class="input-icons">
                <i class="fas fa-user icon"></i>
                <input class="input-field" type="text"  id="name" name="name">
            </div>
        </div>

        <div class="form-row">
            <label for="password" class="form-label">Password</label>
            <div class="input-icons">
                <i class="fas fa-key icon"></i>
                <input class="input-field" type="password"  id="password" name="password">
            </div>
        </div>

        <div class="form-row">
            <label for="email" class="form-label">Email</label>
            <div class="input-icons">
                <i class="fas fa-envelope-open icon"></i>
                <input class="input-field" type="email"  id="email" name="email">
            </div>
        </div>

        <div class="form-row center">
            <button class="btn">Create Account</button>
        </div> 
        
        <div class="form-row center Tmargin">
             <p>Already have an account? <span><a href="/log-in">Sign In</a></span></p>
        </div>
    </form>

<%- include('../include/footer') %> 