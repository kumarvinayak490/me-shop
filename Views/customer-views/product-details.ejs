<%- include('../include/head') %> 
<link rel="stylesheet" href="/static/css/base.css">
<link rel="stylesheet" href="/static/css/product-details.css">
<script src="/static/javascript/add-to-cart.js" defer></script>

</head>

<body>

    <%- include('../include/nav') %> 

    <section class="product-details-section">

        <div class="prod-details-img-container">
            <img src="<%= product.imageURL %> " alt="image">
        </div>

        <div class="prod-details-content">
            <h1 class="prod-details-title"><%= product.title %> </h1>
            <h3 class="prod-details-price"><%= product.price %> </h3>
            <p class="prod-details-summary"><%= product.summary %> </p>

            <button id="add-to-cart" class="btn add-to-cart-btn" data-pid="<%= product._id %>">Add to cart</button>
        </div>

    </section>


    <%- include('../include/footer') %>